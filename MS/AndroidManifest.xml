<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ms.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ms.UniversityList"
            android:label="@string/title_activity_university_list"
            android:parentActivityName="com.example.ms.MainActivity.java" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ms.MainActivity.java" />
        </activity>
        <activity
            android:name="com.example.ms.TaskList"
            android:label="@string/title_activity_task_list" >
        </activity>
        <activity
            android:name="com.example.ms.AddUniv"
            android:label="@string/title_activity_add_univ" >
        </activity>
        <activity
            android:name="com.example.ms.Edit"
            android:label="@string/title_activity_edit" >
        </activity>

        <provider
            android:name="@string/name"
            android:authorities="@string/name" />

        <activity
            android:name="com.example.ms.TrackIt"
            android:label="@string/title_activity_track_it" >
        </activity>
    </application>

</manifest>
